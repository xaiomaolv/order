.header {
  background: white;
  height: 25px;
  line-height: 25px;
  padding-left: 10rpx;
  font-size: 13px;
  align-items: center;
  position: sticky;
  top: 0;
}
.order-content .btn-area{
  width: 100%;
  /* height: 100rpx; */
  padding-top: 18rpx;
  text-align: right;
}
.order-content .btn-area1{
  width: 100%;
  padding-top: 20rpx;
  /* text-align: right; */
}
.mini-btn{  
  display: inline;
  padding: 16rpx 30rpx;
  border-radius: 30rpx; 
  text-align: center;
  margin:10rpx;
  background: rgb(236, 236, 236);
  border: 1rpx solid rgb(236, 236, 236); 
}

.title {
  display: inline;
}

.title .t-lt {
  /* float: left; */
  /* font-size: 1.05rem; */
  display: inline;
}

.title .t-rt {
  float: right;
  display: inline;
}

.isLogin {
  padding: 50rpx;
  background: #fff;
  border-radius: 10rpx;
  z-index: 1001;
}

.isLoginBtn {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.isLoginBtn button {
  background: #fff;
  width: 100%;
  /* height: 68rpx; */
  line-height: 48rpx;
  /* padding-left: 0rpx;
  padding-right: 0rpx;
  margin-right: 0rpx;
  margin-left: 0rpx; */
  font-size: 28rpx;
  /* margin-top: 50rpx; */
  color: var(--primary-color) !important;
  border: 1rpx solid var(--primary-color);
}

.loginTitle {
  font-size: 34rpx;
}

.loginshopImg {
  height: 80rpx;
  font-size: 26rpx;
  padding: 20rpx 0rpx;
  border-bottom: 1rpx solid #ececec;
}

.loginshopImg>image {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.isAgary {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 30rpx;
}

.isAgary>text {
  margin-right: 20rpx;
}
.pdb-10{
  padding: 20rpx 20rpx 0 20rpx;
}
.hide{
  border-radius: 80rpx;
  margin: 20rpx 50rpx;
  font-size: 35rpx;
  display: none;
}
.show{
  display: block;
  border-radius: 80rpx;
  margin: 20rpx 50rpx;
  font-size: 35rpx;
}