.topnav{
  background: #FFFFFF;
  width: 100%;
}
.header {
  background: white;
  height: 60rpx;
  line-height: 50rpx;
  padding-left: 10rpx;
  font-size: 13px;
  align-items: center;

}

.top-map {
  justify-content: left;
  padding-left: 15rpx;
  overflow: hidden;
  /*//超出一行文字自动隐藏 */
  text-overflow: ellipsis;
  /* //文字隐藏后添加省略号 */
  white-space: nowrap;
  /* //强制不换行 */
}
.h100{
  height: 320rpx !important;
}
.top-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 30rpx;
}

.search-input {
  background: lightblue;
}

.s-swiper_item {
  height: 600rpx;
}

.swiper-img {
  width: 100%;
  height: 400rpx;
}

.btn-area {
  border-radius: 40%;
  margin: 20rpx;
  border-radius: 50rpx;
  background: #C83C3C;
}

.activity-img {
  height: 400rpx;
}

.isLogin {
  padding: 50rpx;
  background: #fff;
  border-radius: 10rpx;
  z-index: 1001;
}

.isLoginBtn {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.isLoginBtn button {
  background: #fff;
  width: 100%;
  /* height: 68rpx; */
  line-height: 48rpx;
  /* padding-left: 0rpx;
  padding-right: 0rpx;
  margin-right: 0rpx;
  margin-left: 0rpx; */
  font-size: 28rpx;
  /* margin-top: 50rpx; */
  color: var(--primary-color) !important;
  border: 1rpx solid var(--primary-color);
}

.loginTitle {
  font-size: 34rpx;
}

.loginshopImg {
  height: 80rpx;
  font-size: 26rpx;
  padding: 20rpx 0rpx;
  border-bottom: 1rpx solid #ececec;
}

.loginshopImg>image {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.isAgary {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 30rpx;
}

.isAgary>text {
  margin-right: 20rpx;
}
.shop-card {
  padding: 5rpx;
  background: white;
  margin-top: 10rpx;
}

.shop-card .title {
  display: inline;
}

.shop-card .t-lt {
  /* float: left; */
  font-size: 1.05rem;
  /* font-size: 29rpx; */
  display: inline;
}

.shop-card .t-rt {
  float: right;
  display: inline;
}

.shop-card .desc {
  /* margin-top: 10rpx; */
  display: inline;
}

.shop-card .desc-img{
  width: 100rpx;
  margin: 5rpx;
}
.imgStore{
  height: 140rpx;
  width: 140rpx;
  border-radius: 20rpx;
  border-radius: 10px;
  border: 1px solid rgba(0, 0, 0, 0.2);
  /* box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); */
}

.seach-input{
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 30rpx;
  flex: 1;
 } 
 .seach-btn{
   height: 70rpx;
   line-height: 70rpx;
   padding: 0 20rpx;
   color: var(--primary-color);
   margin-right: 20rpx;
 }

