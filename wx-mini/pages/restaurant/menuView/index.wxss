.scroller-right {
  display: flex;
  width: calc(100vw - 168rpx);
  flex: 1;
  padding: 0;
  margin: 0;
  overflow: hidden;
}

/* sidebar-menu */

.sidebar-menu {
  width: 168rpx;
}

.sidebar-item {
  display: flex;
