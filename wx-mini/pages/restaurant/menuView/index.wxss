  align-items: center;
  color: #666;
  background-color: #F5F5F5;
  position: relative;
}

.sidebar-item--hover:not(.sidebar-item--disabled) {
    background-color: #f2f3f5;
}

.sidebar-item--selected {
  background-color: #ce2d25;
  color: #FFF;
  font-weight: 600;
}

.sidebar-item--selected,
.sidebar-item--selected.sidebar-item--hover {
  background-color: #ce2d25;
  color: #FFF;
}

.sidebar-item--disabled {
  color: #c8c9cc;
}

