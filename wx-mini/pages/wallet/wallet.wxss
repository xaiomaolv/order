/**index.wxss**/
.bankcard {
  background-color: var(--primary-color);
  border-radius: 10px;
  margin: 15px;
  padding: 40px 15px;
  color: white;
  height: 350rpx;
}

.bankcard .money {
  font-size: 36px;
  margin-top: 15px;
}
.bankcard .more {
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  width: 80px;
}
.bankcard .account {
  margin-top: 15px;
  font-size: 16px;
}

.bankcard .status {
  width: 120px;
  float: right;
  top: -5px;
}

.charge-btn {
  margin-top: 50px;
  background-color: var(--primary-color);
  color: white;
  width: 92% !important;
}

.cash-btn {
  margin-top: 20px;
  color: var(--primary-color);
  width: 92% !important;
  border: var(--primary-color) solid 1px;
}
